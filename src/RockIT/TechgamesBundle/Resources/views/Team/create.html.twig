{% extends 'RockITTechgamesBundle::layout.html.twig' %}

{% block content %}

    {% if message %}
        <div class="alert alert-danger" role="alert">{{ message }}</div>
    {% endif %}

    <div class="row">

        <h1>Create New Team</h1>

        <div class="col-md-8">


            <form  role="form"  method="post">
                <div class="form-group">
                    <label for="name">Team Name</label>
                    {% if name %}
                        <input type="text" class="form-control" id="name" name="name" value="{{ name }}" placeholder="Team Name">
                    {% else %}
                        <input type="text" class="form-control" id="name" name="name" value="" placeholder="Team Name">
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    {% if name %}
                        <input type="text" class="form-control" id="description" name="description" value="{{ description }}" placeholder="Description">
                    {% else %}
                        <input type="text" class="form-control" id="description" name="description" value="" placeholder="Description">
                    {% endif %}
                </div>

                <div class="errorMsg">
                    <ul class="error">
                        {% if errors %}
                            {% for invalidField, error in errors %}
                                <li ><span class="glyphicon glyphicon-exclamation-sign"></span> Please enter a valid {{ invalidField}}.</li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>

                <div class="saveChanges">
                    <button type="submit" class="btn btn-default" id="submitGameEdit">Save</button>
                    <span>or</span>
                    <a href="{{ path(lastPath) }}?t=teams" class="cancel">Cancel</a>
                </div>
            </form>

        </div>
    </div>
{% endblock %}