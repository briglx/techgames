{% extends 'RockITTechgamesBundle::layout.html.twig' %}

{% block content %}

<h1>Teams</h1>
    <div class="row teams-row">

        <div class="col-md-9">
            <div class="inner-addon left-addon">
                <i class="glyphicon glyphicon-search"></i>
                <input type="text" class="form-control" placeholder="Find a team" />
            </div>

        </div>

        <div class="col-md-3">
            <a href="{{path('team_create')}}" class="btn btn-primary pull-right">New Team</a>

            <button type="button" class="btn btn-primary pull-right">My Teams</button>
        </div>


    </div>

    <div class="row team-row">

    {% for team in teams %}

        <div class="col-md-6">

            <div class="panel panel-default team">
                <div class="panel-heading clearfix">
                    <h1 class="panel-title">{{ team.getName() }}<button type="button" class="btn btn-default pull-right">Join</button> <a class="btn btn-link pull-right" href="{{path('team_edit', {'teamId':team.getId()})}}">Edit</a></h1>

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            {{ team.users | length }} Members
                        </div>
                        <div class="col-md-9">
                            {{ team.getGames() | length }} Games
                        </div>
                    </div>
                    <div class="row">
                    {% for member in team.users %}
                        <div class="p">
                            <a href="{{path('profile_detail', {'profileId':member.getId()})}}"><img class="enter-block" src="{{ member.avatar(90) }}" alt="{{ member.username }}" class="img-rounded"></a>
                            <span ><a href="{{path('profile_detail', {'profileId':member.getId()})}}">{{ member.username }}</a></span>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>

        </div>


    {% endfor %}
    </div>

{% endblock %}