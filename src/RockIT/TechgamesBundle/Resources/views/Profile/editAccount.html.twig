{% extends 'RockITTechgamesBundle::layout.html.twig' %}

{% block content %}

<div class="row">
    <div class="col-md-4">
        <ul class="nav nav-sidebar">
            <li ><a href="{{path('user_edit', {'userId':user.getId()})}}?t=n">Name and Details</a></li>
            <li class="active"><a href="{{path('user_edit', {'userId':user.getId()})}}?t=a">Account Settings</a></li>
            <li><a href="{{path('user_edit', {'userId':user.getId()})}}?t=p">Profile</a></li>
            <li><a href="{{path('user_edit', {'userId':user.getId()})}}?t=schedule">Schedule</a></li>
        </ul>
    </div>
    
    <div class="col-md-8">

        <form class="form-horizontal" role="form" method="post">

            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" name="email" value="{{user.getEmail()}}">
                </div>
            </div>

            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="username" value="{{user.getUserName()}}">
                </div>
            </div>

            <div class="form-group">
                <label  class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <a href="#" class="btn btn-default">Change</a>
                </div>
            </div>

            <div class="errorMsg">
                <ul class="error col-sm-10 col-sm-offset-2">
                    {% if errors %}
                        {% for invalidField, error in errors %}
                            <li ><span class="glyphicon glyphicon-exclamation-sign"></span> Please enter a valid {{ invalidField}}.</li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>

            <div class="saveChanges pull-right">
                <button type="submit" class="btn btn-default" id="submitEdit">Save</button>
                <span>or</span>
                <a href="" class="cancel">Cancel</a>
                <div class="error"></div>
            </div>
        </form>


    </div>

</div>




{% endblock %}